#include <iostream>
#include <string>
#include <fstream>
#include <vector>
#include <sstream>
using namespace std;


struct AA {
    char codon[3];
    string tLet;
    string oLet;
    string name;
};
class Prot {
    private:
        vector <AA> prot;
    public:
        void print();
        void load();

};


int main () {
    Prot ref;
    ref.load();
    ref.print();
    return 0;
}

void Prot::print () {
    cout << "vector: " <<endl;
    for (int i=0; i<prot.size(); i++) {
        cout << prot[i].codon << " " << prot[i].tLet << " "<< prot[i].oLet << " " << prot[i].name<< endl;
    }
}

void Prot::load() {
    AA a1;
    ifstream fin;
    string line;
    string str1;
    string str2;
    string str3;
    string str4;
    string str5;
    string str6;
    fin.open("dna2protein.csv");
    if (!fin.fail()) {
        while (!fin.eof()) {
            getline(fin, line);
            stringstream sin(line);
            getline(sin,str1,',');
            getline(sin,str2,',');
            getline(sin,str3,',');
            getline(sin,str4,',');
            getline(sin,str5,',');
            getline(sin,str6,',');

            a1.codon[0]=str1[0];
            a1.codon[1]=str2[0];
            a1.codon[2]=str3[0];
            a1.tLet=str4;
            a1.oLet=str5[0];
            a1.name=str6;

            prot.push_back(a1);
        }
    }
}
